{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "target": "es2015",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"],
}
